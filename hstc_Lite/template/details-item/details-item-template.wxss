.detail-container {
    display: flex;
    flex-direction: column;
    padding: 15px;
    margin-bottom: 80rpx;
}

.news-title {
    font-size: 45rpx;
    letter-spacing: 3px;
    line-height: 30px;
    font-weight: bold;
    margin-bottom: 8px;
}

.news-time {
    font-size: 25rpx;
    color: #7b7b7b;
}

.news-autor {
    margin-left: 20rpx;
    font-size: 25rpx;
    color: #7b7b7b;
}

.news-image {
    width: 100%;
    height: 450rpx;
    margin:18px 0;
}

.news-content {
    letter-spacing: 2px;
    line-height: 25px;
}